<%= form_for(toy) do |f| %>
  <div class="form-style">
    <%= f.label :name %>
    <%= f.text_field :name %>
  <br>
  </div>

  <div class="form-style">
    <%= f.label :time %>
    <%= f.datetime_local_field :time %>
  <br>
  </div>

  <div class="form-style">
    <%= f.label :number %>
    <%= f.number_field :number %>
  <br>
  </div>

  <div class="form-style">
    <%= f.label :description %>
    <%= f.text_area :description %>
  <br>
  </div>

  <%= f.submit "送出"%>
<% end %>